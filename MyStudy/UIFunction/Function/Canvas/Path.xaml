<UserControl x:Class="UIFunction.Function.Canvas.Path"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIFunction.Function.Canvas"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Draw a line -->
        <Canvas Background="PaleTurquoise" Grid.Column="0" Grid.Row="0" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 0 L 100 100" />
        </Canvas>
        <Canvas Background="PaleTurquoise" Grid.Column="1" Grid.Row="0" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 100,100 0 1 1 200,0" />
        </Canvas>
        <Canvas Background="PaleTurquoise" Grid.Column="2" Grid.Row="0" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 2,1 0 1 1 200,0" />
        </Canvas>
        <!-- 放二個A,就會畫二個半圓,200,0表示從目前點移動X位置200,Y位置0-->
        <Canvas Background="PaleTurquoise" Grid.Column="3" Grid.Row="0" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,3 0 1 1 200,0" />
        </Canvas>
        <!-- -200,0表示從目前點移動X位置-200,Y位置0,就變回原來的地方 -->
        <Canvas Background="PaleTurquoise" Grid.Column="0" Grid.Row="1" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0" />
        </Canvas>
        <!-- M 30 100的意思是從X 30, Y 100的地方開始,再畫半個圓, -->
        <Canvas Background="PaleTurquoise" Grid.Column="1" Grid.Row="1" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0" />
        </Canvas>
        <!-- 放二個A, 結束位置在最後位置的 X -140,就又變成一個圓 -->
        <Canvas Background="PaleTurquoise" Grid.Column="2" Grid.Row="1" Height="200" Width="200">
            <Path Stroke="Green" StrokeThickness="3" Fill="Violet"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
        </Canvas>
        <!-- 把顏色去掉 -->
        <Canvas Grid.Column="3" Grid.Row="1" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
        </Canvas>
        <!-- Film: 10:35, 比例是1:1, 終點100,100即是從起點開始, X+100, Y+100 -->
        <Canvas Grid.Column="0" Grid.Row="2" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 1,1 0 1 1 100,100" />
        </Canvas>
        <!-- Film: 10:35, 比例是100:100, 此時圖就會比較大 -->
        <Canvas Grid.Column="1" Grid.Row="2" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 1 1 100,100" />
        </Canvas>
        <!-- Film: 11:17, 有個參數為0,表示弧線是以反值的角度繪製 -->
        <Canvas Grid.Column="2" Grid.Row="2" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 1 0 100,100" />
        </Canvas>
        <!-- Film: 11:37, 最後座標是Y-100 -->
        <Canvas Grid.Column="3" Grid.Row="2" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 1 1 100,-100" />
        </Canvas>
        <!-- Film: 11:37, 最後座標是Y-100, 中間第二個參數是0 -->
        <Canvas Grid.Column="0" Grid.Row="3" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 0 1 100,-100" />
        </Canvas>
        <!-- Film: 11:56,  -->
        <Canvas Grid.Column="1" Grid.Row="3" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 0 1 100,-100
                  v 30" />
        </Canvas>
        <!-- Film: 11:56 -->
        <Canvas Grid.Column="2" Grid.Row="3" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 0 1 100,-100
                  v 100" />
        </Canvas>
        <!-- Film: 12:40 從v 30的點為起點,目標點為 X-70, Y+70,中間三個參數為0 就可以畫這樣(很玄) -->
        <Canvas Grid.Column="3" Grid.Row="3" Height="200" Width="200">
            <Path Fill="#FFD9DADE"
                  Data="M 0 100 a 3,3 0 1 1 200,0 a 2,2 0 1 1 -200,0
                        M 30 100 a 1,1 0 1 1 140,0 a 1,1 0 1 1 -140,0" />
            <Path Fill="#FF1E6E98"
                  Data="M 0 100 a 100,100 0 0 1 100,-100
                  v 30 a 70,70 0 0 0 -70,70" />
        </Canvas>
    </Grid>
</UserControl>
