<UserControl x:Class="UIFunction.Function.Slider.Sample1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIFunction.Function.Slider"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
        <Grid>
            <Slider x:Name='slider'
                HorizontalAlignment="Center" 
                Margin="0,48,0,0" 
                VerticalAlignment="Top" 
                Width="214"/>
            
            <!-- IPT: Binding important -->
            <Label x:Name='label'
                Content="Label" 
                FontSize='{Binding ElementName=slider, Path=Value}'
                HorizontalAlignment="Center" 
                Margin="0,94,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="-3.457,-0.334"/>
        </Grid>
    </Viewbox>
</UserControl>
