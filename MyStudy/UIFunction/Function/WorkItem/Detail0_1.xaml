<UserControl x:Class="UIFunction.Function.WorkItem.Detail0_1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIFunction.Function.WorkItem"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Name="btnBattery" Grid.Row="0" Content="Start check battery" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnBattery_Click"/>
            <TextBlock Name="tbBattValue" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="0" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>
</UserControl>
